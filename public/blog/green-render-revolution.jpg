<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0a1d1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a3a32;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="greenGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#22c55e;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#15803d;stop-opacity:0.8" />
    </linearGradient>
    <linearGradient id="leafGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#4ade80;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#16a34a;stop-opacity:0.9" />
    </linearGradient>
    <linearGradient id="renderGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#00ffff;stop-opacity:0.7" />
      <stop offset="100%" style="stop-color:#008080;stop-opacity:0.7" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#bg)"/>
  
  <!-- Grid pattern -->
  <pattern id="gridPattern" width="40" height="40" patternUnits="userSpaceOnUse">
    <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#22c55e" stroke-width="0.5" opacity="0.1"/>
  </pattern>
  <rect width="1200" height="600" fill="url(#gridPattern)"/>
  
  <!-- Central globe/earth with leaves -->
  <g transform="translate(600, 200)">
    <!-- Earth circle -->
    <circle cx="0" cy="0" r="120" fill="url(#greenGrad)" opacity="0.8">
      <animate attributeName="opacity" values="0.6;0.9;0.6" dur="3s" repeatCount="indefinite"/>
    </circle>
    <circle cx="0" cy="0" r="110" fill="none" stroke="#22c55e" stroke-width="2" opacity="0.5"/>
    
    <!-- Grid pattern on globe -->
    <g stroke="#4ade80" stroke-width="1" opacity="0.4">
      <path d="M 0,-120 Q 30,-90 0,-60 T 0,0 T 0,60 T 0,120"/>
      <path d="M 0,-120 Q -30,-90 0,-60 T 0,0 T 0,60 T 0,120"/>
    </g>
    
    <!-- Leaves around globe -->
    <g opacity="0.8">
      <ellipse cx="-40" cy="-30" rx="25" ry="40" fill="url(#leafGrad)" transform="rotate(-30)">
        <animate attributeName="opacity" values="0.6;1;0.6" dur="2.5s" repeatCount="indefinite"/>
      </ellipse>
      <ellipse cx="40" cy="-40" rx="25" ry="35" fill="url(#leafGrad)" transform="rotate(45)">
        <animate attributeName="opacity" values="0.6;1;0.6" dur="2.8s" repeatCount="indefinite"/>
      </ellipse>
      <ellipse cx="0" cy="-70" rx="20" ry="30" fill="url(#leafGrad)" transform="rotate(0)">
        <animate attributeName="opacity" values="0.6;1;0.6" dur="2.2s" repeatCount="indefinite"/>
      </ellipse>
    </g>
  </g>
  
  <!-- Render frames (left) -->
  <g transform="translate(200, 150)">
    <rect x="0" y="0" width="150" height="100" rx="8" fill="#1e293b" stroke="#22c55e" stroke-width="2" opacity="0.8">
      <animate attributeName="stroke-opacity" values="0.3;0.9;0.3" dur="2s" repeatCount="indefinite"/>
    </rect>
    <rect x="10" y="10" width="130" height="80" rx="4" fill="url(#renderGrad)" opacity="0.6">
      <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
    </rect>
    <!-- Render progress -->
    <rect x="10" y="10" width="90" height="80" rx="4" fill="#22c55e" opacity="0.5">
      <animate attributeName="width" values="80;130;80" dur="3s" repeatCount="indefinite"/>
    </rect>
  </g>
  
  <!-- GPU cluster (right) -->
  <g transform="translate(900, 150)">
    <!-- GPU units -->
    <g>
      <rect x="0" y="0" width="80" height="50" rx="4" fill="#1e293b" stroke="#008080" stroke-width="2" opacity="0.8">
        <animate attributeName="opacity" values="0.6;1;0.6" dur="2s" repeatCount="indefinite"/>
      </rect>
      <rect x="5" y="5" width="70" height="40" rx="2" fill="url(#greenGrad)" opacity="0.7"/>
      
      <!-- Heat sync lines -->
      <g stroke="#22c55e" stroke-width="1" opacity="0.6">
        <line x1="10" y1="15" x2="70" y2="15"/>
        <line x1="10" y1="25" x2="70" y2="25"/>
        <line x1="10" y1="35" x2="70" y2="35"/>
      </g>
    </g>
    
    <!-- Second GPU -->
    <g transform="translate(90, 60)">
      <rect x="0" y="0" width="80" height="50" rx="4" fill="#1e293b" stroke="#008080" stroke-width="2" opacity="0.8">
        <animate attributeName="opacity" values="0.6;1;0.6" dur="2.5s" repeatCount="indefinite"/>
      </rect>
      <rect x="5" y="5" width="70" height="40" rx="2" fill="url(#greenGrad)" opacity="0.7"/>
      
      <g stroke="#22c55e" stroke-width="1" opacity="0.6">
        <line x1="10" y1="15" x2="70" y2="15"/>
        <line x1="10" y1="25" x2="70" y2="25"/>
        <line x1="10" y1="35" x2="70" y2="35"/>
      </g>
    </g>
  </g>
  
  <!-- Energy waves -->
  <g transform="translate(600, 200)">
    <circle cx="0" cy="0" r="0" stroke="#22c55e" stroke-width="2" fill="none" opacity="0.3">
      <animate attributeName="r" values="0;180;180" dur="4s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.5;0;0" dur="4s" repeatCount="indefinite"/>
    </circle>
    <circle cx="0" cy="0" r="0" stroke="#22c55e" stroke-width="2" fill="none" opacity="0.3">
      <animate attributeName="r" values="0;180;180" dur="4s" repeatCount="indefinite" begin="1s"/>
      <animate attributeName="opacity" values="0.5;0;0" dur="4s" repeatCount="indefinite" begin="1s"/>
    </circle>
  </g>
  
  <!-- Connection lines -->
  <g stroke="#22c55e" stroke-width="3" fill="none" opacity="0.5" stroke-dasharray="5,5">
    <path d="M 350 200 L 480 200">
      <animate attributeName="stroke-dashoffset" values="0;10" dur="1s" repeatCount="indefinite"/>
    </path>
    <path d="M 810 200 L 900 200">
      <animate attributeName="stroke-dashoffset" values="0;10" dur="1s" repeatCount="indefinite"/>
    </path>
  </g>
  
  <!-- Title Text -->
  <text x="600" y="80" font-family="Arial, sans-serif" font-size="42" font-weight="bold" fill="white" text-anchor="middle" opacity="0.95">
    Green Render Revolution
  </text>
  <text x="600" y="110" font-family="Arial, sans-serif" font-size="24" fill="#22c55e" text-anchor="middle" opacity="0.8">
    Sustainable Visualisation
  </text>
  
  <!-- Tech badges -->
  <g transform="translate(600, 450)">
    <!-- Efficiency badge -->
    <rect x="-120" y="-15" width="100" height="30" fill="none" stroke="#22c55e" stroke-width="2" rx="15" opacity="0.6">
      <animate attributeName="opacity" values="0.4;0.8;0.4" dur="3s" repeatCount="indefinite"/>
    </rect>
    <text x="-70" y="5" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#22c55e" text-anchor="middle">
      Efficient
    </text>
    
    <!-- Carbon badge -->
    <rect x="-10" y="-15" width="90" height="30" fill="none" stroke="#4ade80" stroke-width="2" rx="15" opacity="0.6">
      <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
    </rect>
    <text x="35" y="5" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#4ade80" text-anchor="middle">
      Carbon-free
    </text>
    
    <!-- Renewable badge -->
    <rect x="80" y="-15" width="120" height="30" fill="none" stroke="#008080" stroke-width="2" rx="15" opacity="0.6">
      <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.8s" repeatCount="indefinite"/>
    </rect>
    <text x="140" y="5" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#008080" text-anchor="middle">
      Renewable
    </text>
  </g>
  
  <!-- Message -->
  <text x="600" y="520" font-family="Arial, sans-serif" font-size="18" fill="#22c55e" text-anchor="middle" opacity="0.9">
    Rendering Without Costing the Earth
  </text>
</svg>

