<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#064e40;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f766e;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="1200" height="600" fill="url(#bg1)"/>
  <pattern id="grid1" width="40" height="40" patternUnits="userSpaceOnUse">
    <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#34d399" stroke-width="0.5" opacity="0.1"/>
  </pattern>
  <rect width="1200" height="600" fill="url(#grid1)"/>
  <circle cx="600" cy="300" r="100" fill="#10b981" opacity="0.3">
    <animate attributeName="r" values="80;130;80" dur="4s" repeatCount="indefinite"/>
  </circle>
  <circle cx="300" cy="200" r="60" fill="#34d399" opacity="0.4">
    <animate attributeName="r" values="50;80;50" dur="3s" repeatCount="indefinite"/>
  </circle>
  <circle cx="900" cy="400" r="60" fill="#6ee7b7" opacity="0.4">
    <animate attributeName="r" values="50;80;50" dur="3.5s" repeatCount="indefinite"/>
  </circle>
  <text x="600" y="280" font-family="Arial, sans-serif" font-size="56" font-weight="bold" fill="white" text-anchor="middle">GreenChain</text>
  <text x="600" y="330" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="#34d399" text-anchor="middle">Sustainable Technology</text>
</svg>

